<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    color: #a8abba;
  }

  .container {
    display: flex;
    justify-content: center;
    align-items: center; 
    height: 450px;
    margin: 7.5% auto;
    border-radius: 5px;
    background-color: #fff;
    max-width: 750px; 
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .left-panel {
    flex: 1;
    border-radius: 5px 0 0 5px;
    overflow: hidden;
  }

  .left-panel img {
    width: 100%; 
    height: auto; 
  }

  .right-panel {
    flex: 1;
    background-color: #fff;
    border-radius: 0 5px 5px 0;
  }

  h2 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #707683;
  }

  .field {
    margin-bottom: 20px;
  }

  label {
    display: block;
    font-weight: bold;
  }

  input[type="text"],
  input[type="email"],
  input[type="password"] {
    width: 90%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    color: #243656;
  }

  .actions {
    text-align: center;
    margin-top: 10px;
  }

  .actions input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .actions input[type="submit"]:hover {
    background-color: #0056b3;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }

    .left-panel,
    .right-panel {
      border-radius: 5px;
      margin-bottom: 20px;
    }
  
    .left-panel {
      border-radius: 5px 5px 0 0;
    }
  
    .right-panel {
      border-radius: 0 0 5px 5px;
    }
  }
</style>

<div class="container">
  <div class="left-panel">
    <%= image_tag "/images/signin-image.jpg" %>
  </div>
  <div class="right-panel">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Enter your email", required: true%>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", required: true%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="display: flex;">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, style: "margin: 4px 0 0 10px;" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div><br />
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

